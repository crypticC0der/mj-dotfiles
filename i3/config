# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 25 px
        bindsym j resize grow height 25 px
        bindsym k resize shrink height 25 px
        bindsym l resize grow width 25 px

        # same bindings, but for the arrow keys
#        bindsym Left resize shrink width 25 px
#        bindsym Down resize grow height 25 px
#        bindsym Up resize shrink height 25 px
#        bindsym Right resize grow width 25 px

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
		bindsym $mod+t mode "launcher"
		bindsym $mod+s mode "spotify"
}

mode "launcher" {

		#resize
		bindsym Mod1+h resize shrink width 25 px
		bindsym Mod1+j resize grow height 25 px
		bindsym Mod1+k resize shrink height 25 px
		bindsym Mod1+l resize grow width 25 px

		#change selected window
		bindsym h exec "~/.config/i3/move-cursor.sh focus left"
		bindsym j exec "~/.config/i3/move-cursor.sh focus down"
		bindsym k exec "~/.config/i3/move-cursor.sh focus up"
		bindsym l exec "~/.config/i3/move-cursor.sh focus right"

		# move used window
		bindsym Shift+h move left
		bindsym Shift+j move down
		bindsym Shift+k move up
		bindsym Shift+l move right
		# split in horizontal orientation
		bindsym $mod+Shift+v split h

		# split in vertical orientation
		bindsym $mod+v split v

		# letters left:
		# J K X Y

		#applications
		bindsym p exec --no-startup-id spotify
		bindsym t exec termite -e "tmux"
		bindsym i exec qutebrowser
		bindsym shift+i exec qutebrowser ":open -p"
		bindsym c exec discord
		bindsym g exec steam
		bindsym m exec minecraft-launcher
		bindsym e exec gimp
		bindsym o exec libreoffice
		bindsym z exec ~/shs/zopen.sh

		#exiters
		bindsym q kill
		bindsym $mod+r mode "resize"
		bindsym Return mode "default"
		bindsym Escape mode "default"
		bindsym $mod+t mode "default"
		bindsym $mod+s mode "spotify"
}

mode "spotify" {
		
		bindsym XF86AudioPlay exec playerctl -i "chromium.instance$(pgrep Discord | head -1)" play-pause
		bindsym XF86AudioStop exec playerctl -i "chromium.instance$(pgrep Discord | head -1)" stop
		bindsym XF86AudioNext exec playerctl -i "chromium.instance$(pgrep Discord | head -1)" next
		bindsym XF86AudioPrev exec playerctl -i "chromium.instance$(pgrep Discord | head -1)" previous

		bindsym ShiftXF86AudioPlay exec playerctl -p spotify play-pause
		bindsym Shift+XF86AudioStop exec playerctl -p spotify stop
		bindsym Shift+XF86AudioNext exec playerctl -p spotify next
		bindsym Shift+XF86AudioPrev exec playerctl -p spotify previous

		bindsym Ctrl+XF86AudioPlay exec playerctl -p mpv qutebrowser play-pause
		bindsym Ctrl+XF86AudioStop exec playerctl -p mpv qutebrowser stop
		bindsym Ctrl+XF86AudioNext exec playerctl -p mpv qutebrowser next
		bindsym Ctrl+XF86AudioPrev exec playerctl -p mpv qutebrowser previous

		#volume
		bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ #increase sound volume
		bindsym XF86AudioLowerVolume exec amixer set Master 5%- #decrease sound volume
		bindsym XF86AudioMute exec amixer set Master toggle # mute sound

		bindsym Shift+XF86AudioRaiseVolume exec "pactl set-sink-volume $(~/shs/sink.sh) +5% " 
		#increase sound volume
		bindsym Shift+XF86AudioLowerVolume exec "pactl set-sink-volume $(~/shs/sink.sh) -5% " 
		#decrease sound volume

		#keyboard orientateted controls
		#player controls
		bindsym Space exec playerctl -i "chromium.instance$(pgrep Discord | head -1)" play-pause
		bindsym Up exec playerctl -i "chromium.instance$(pgrep Discord | head -1)" next
		bindsym Down exec playerctl -i "chromium.instance$(pgrep Discord | head -1)" previous

		bindsym Shift+Space exec playerctl -p spotify play-pause
		bindsym Shift+Up exec playerctl -p spotify next
		bindsym Shift+Down exec playerctl -p spotify previous

		bindsym Ctrl+Space exec playerctl -p qutebrowser mpv play-pause
		bindsym Ctrl+Up exec playerctl -p qutebrowser mpv next
		bindsym Ctrl+Down exec playerctl -p qutebrowser mpv previous

		#volume controls
		bindsym 0 exec amixer set Master 5%+ #increase sound volume
		bindsym 9 exec amixer set Master 5%- #decrease sound volume
		bindsym / exec amixer set Master toggle # mute sound

		bindsym shift+0 exec "pactl set-sink-volume $(~/shs/sink.sh) +5% " 
		#increase sound volume (shift+0)
		bindsym shift+9 exec "pactl set-sink-volume $(~/shs/sink.sh) -5% " 
		#decrease sound volume (shift+()

		bindsym y exec "~/shs/pyspot.sh search playlist"
		bindsym r exec "~/shs/pyspot.sh search artist"
		bindsym t exec "~/shs/pyspot.sh search track"
		bindsym a exec "~/shs/pyspot.sh search album"
		bindsym p exec "~/shs/spot.sh"
		bindsym l exec "~/shs/splist.sh"
		bindsym g exec "~/shs/pyspot.sh add"
		bindsym s exec "~/shs/pyspot.sh shuffle"
		bindsym Left exec "~/shs/pyspot.sh back"
		bindsym Right exec "~/shs/pyspot.sh forward"

		#exiters	
		bindsym $mod+r mode "resize"
		bindsym Return mode "default"
		bindsym Escape mode "default"
		bindsym $mod+t mode "launcher"
		bindsym $mod+s mode "default"
}

